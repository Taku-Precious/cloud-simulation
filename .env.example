# CloudTemplate + CloudSim Merged Configuration
# Copy this file to .env and update values

# ============= gRPC Server Configuration =============
SERVER_HOST=localhost
SERVER_PORT=51234
MAX_WORKERS=10

# ============= TLS/Security Configuration =============
USE_TLS=false
SERVER_CERT=certs/server.crt
SERVER_KEY=certs/server.key
CA_CERT=certs/ca.crt

# ============= Email Configuration (Authentication) =============
FROM_EMAIL=precioustakuwopong@gmail.com
EMAIL_APP_PASSWORD=your_app_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ============= OTP Configuration =============
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5

# ============= Authentication Configuration =============
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW_MINUTES=15
SESSION_EXPIRY_MINUTES=30

# ============= Password Policy Configuration =============
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_DIGIT=true
REQUIRE_SPECIAL=false

# ============= Storage Configuration =============
STORAGE_MODE=distributed  # 'local' or 'distributed'
REPLICATION_FACTOR=3
DEFAULT_USER_QUOTA_GB=1024  # 1TB per user

# ============= CloudSim Configuration =============
CLOUDSIM_CONFIG_PATH=config.yaml
CLOUDSIM_HEARTBEAT_INTERVAL_SECONDS=5
CLOUDSIM_HEARTBEAT_TIMEOUT_SECONDS=15

# ============= Database Configuration =============
AUTH_DB_PATH=auth.db
STORAGE_DB_PATH=user_storage.db
STORAGE_METADATA_DB_PATH=storage_metadata.db

# ============= Logging Configuration =============
LOG_LEVEL=INFO
LOG_FILE=cloud_system.log
